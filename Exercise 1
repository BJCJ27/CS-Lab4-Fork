#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>

int main() {
    pid_t pid = fork();

    if (pid == 0) {
        // This block runs in the child process
        printf("Hello from the child process! PID: %d\n", getpid());
    } else if (pid > 0) {
        // This block runs in the parent process
        printf("Hello from the parent process! PID: %d\n", getpid());
    } else {
        // fork failed
        perror("fork failed");
        return 1;
    }

    return 0;
}
